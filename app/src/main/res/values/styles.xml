<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:layoutDirection">ltr</item>
    </style>

    <style name="NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:layoutDirection">ltr</item>
    </style>

    <style name="DatePickerDialog" >
        <item name="android:windowIsFloating">true</item>
        <item name="colorAccent">@color/base2</item>
    </style>


    <style name="TextWhite">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextBlack">
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="TextBold">
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextBigSize">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TextWBBBS">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextWBBS">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextWBNS">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextWSS">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextWNS">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>



    <style name="TextBBNS">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextBB">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextBNS">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>
    
    <style name="TextInputLayoutBaseColor" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/base</item>
        <item name="hintTextColor">@color/base</item>
    </style>


</resources>
